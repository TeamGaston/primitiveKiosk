<link rel="stylesheet" href="keypad.css">
<section id="keypadFrame" class="keypadArea">
    <p class="bookingNumberText">
        <%= title %>
    </p>
    <input id="phoneNumber" class="phoneNumber" type="text" placeholder="010-1111-2222" readonly>
    <button type="button" class="key" value="1">1</button>
    <button type="button" class="key" value="2">2</button>
    <button type="button" class="key" value="3">3</button>
    <button type="button" class="key" value="4">4</button>
    <button type="button" class="key" value="5">5</button>
    <button type="button" class="key" value="6">6</button>
    <button type="button" class="key" value="7">7</button>
    <button type="button" class="key" value="8">8</button>
    <button type="button" class="key" value="9">9</button>
    <button type="button" class="key delete" value="delete"><i class="fa-solid fa-delete-left"></i></button>
    <button type="button" class="key" value="0">0</button>
    <button type="button" class="key" value="reset">재입력</button>
    <button type="submit" id="checkBtn" class="check" disabled>확인</button>
</section>

<script>
    class Keypad {
        constructor(id) {
            this.id = id;
        }
        inputNumber() {
            class Deque {
                constructor(id) {
                    this.id = id;
                    this.storage = [];
                    this.length = 0;
                }
                pushData(data) {
                    this.storage.push(data);
                }
                unshiftData(data) {
                    this.storage.unshift(data);
                }
                popData() {
                    return this.storage.pop();
                }
                shiftData() {
                    return this.storage.shift();
                }
                getLength() {
                    this.length = this.storage.length;
                    return this.storage.length;
                }
                refreshData() { this.storage = []; } //변경
                copyStorage() {
                    return [...this.storage];
                }

            }


            const checkBtn = document.getElementById("checkBtn");
            const keypad = document.getElementById("keypadFrame");

            const numberDeque = new Deque(`${this.id}Deque`);

            // 변경
            const confirmData = () => {
                const currentNumber = String(document.getElementById('phoneNumber').value);
                let DequeData = '';
                numberDeque.copyStorage().forEach((item) => {
                    DequeData += item;
                });

                if (DequeData !== currentNumber) {
                    numberDeque.refreshData();
                    for (let i = 0; i < currentNumber.length; i++) {
                        numberDeque.pushData(currentNumber[i]);
                    }
                }
            }

            keypad.addEventListener("click", (e) => {
                const keyValue = e.target.value;
                if (keyValue) {
                    //console.log(keyValue);
                    switch (keyValue) {
                        case "delete":
                            confirmData();
                            numberDeque.popData();
                            break;
                        case "reset":
                            while (numberDeque.getLength() > 0) {
                                numberDeque.popData();
                            }
                            break;
                        default:
                            //console.log(e.target.id);
                            ( e.target.id === "" ) && (numberDeque.pushData(keyValue));
                            //numberDeque.pushData(keyValue);
                    }
                }

                this.showNumber(numberDeque);
                checkBtn.disabled = (numberDeque.getLength() < 10);
            });
        }

        showNumber(deque) {
            const displayNumber = document.getElementById("phoneNumber");
            let displayStr = "";
            ///console.log( deque.copyStorage() );
            deque.copyStorage().forEach(number => {
                displayStr += number;
            });

            displayNumber.value = displayStr;
        }

        runKeypad() {
            this.inputNumber();
        }
    }

    const keypad = new Keypad("keypad");
    keypad.runKeypad();
</script>