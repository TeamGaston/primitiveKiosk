<section class="popupArea">
    <article class="popupBar">
        <p class="popupTitle popupBarTextCommon">결제 완료 안내</p>
        <!-- <i class="popupBarTextCommon fa-solid fa-x"></i> -->
    </article>
    <section class="popupContent">
        <!-- ~여기에 작성~ -->

        <!-- 타이틀 박스 -->
        <p class="popupContentText">결제가 완료되었습니다.</p>
        <p class="popupContentText"><span id="timer" class="popupContentText">5</span>초 후에 메인화면으로 돌아갑니다.</p>

        <!-- 결제완료 이미지 -->
        <div class="popupContentImg"></div>
    </section>
</section>

<script>
    document.addEventListener("DOMContentLoaded", () => {// 5초뒤 종료
        const timer = document.getElementById("timer");
        timer.style.color = "white";
        const timerSecond = 5;
        for (let i = 1; i <= timerSecond; i++) {
            setTimeout(() => {
                timer.innerText = `${(timerSecond + 1) - i}`;

                if (i === timerSecond) {
                    window.location.href = "/";
                }
            }, i * 1000);
        }
    });
</script>

